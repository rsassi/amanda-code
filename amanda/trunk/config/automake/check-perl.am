# vim:ft=automake

# syntax check all perl scripts named in $(CHECK_PERL)
check-perl: $(CHECK_PERL)
	@if test -n "$(PERL)"; then \
		for perlobj in $(CHECK_PERL); do \
			$(PERL) -c -w -T $$perlobj || exit 1; \
		done; \
	fi

